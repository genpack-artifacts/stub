{
    name: "stub",
    profile: "paravirt",
    compression:"xz",
    packages: [
        "genpack/paravirt",
        "sys-kernel/gentoo-kernel", // build from source using savedconfig
        "sys-apps/kexec-tools",
        "dev-util/debootstrap",
        "sys-fs/cryptsetup",
        "dev-util/rpmbootstrap",
        "sys-devel/binutils"
    ],
    binpkg_excludes: [
        "sys-kernel/gentoo-kernel"
    ],
    use: {
        "app-arch/rpm": "lzma lua caps",
        "sys-kernel/dracut-genpack": "transient",
        "sys-kernel/gentoo-kernel": "savedconfig",
        "sys-apps/kexec-tools": "lzma",
    },
    "arch":{
        "aarch64": {
            "accept_keywords": {
                "dev-util/debootstrap":null,
                "app-emulation/qemu-guest-agent":null,
                "app-admin/eclean-kernel": null,
                "dev-python/pymountboot": null
            }
        }
    }
}
// vm allocate distroname.img 8
// vm run -d distroname.img stub-$(uname -m).squashfs
